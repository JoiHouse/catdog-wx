/**app.wxss**/
.container {
  height: 100%;
  --padding-c: 20px;
  --radius-c: 16px;
}
.title-c {
  font-weight: 600;
  font-size: 1.12em;
  padding-bottom: calc(var(--padding-c) - 5px);
}
.card-c {
  border-radius: var(--radius-c);
  padding: var(--padding-c);
  overflow: hidden;
}
.showAnimal {
  padding: var(--padding-c);
}
.showAnimal-search {
  display: flex;
  align-items: center;
  margin-top: 1rem;
  border: 1px solid #7a7a7ada;
  box-shadow: 0 0 0.2em #00000013;
  border-radius: 10px;
  overflow: hidden;
}

.search-input {
  font-family: inherit;
  font-size: inherit;
  background-color: #fff;
  border: none;
  color: #646464;
  padding: 0.7rem 1.8rem;
  transition: all ease-in-out 0.5s;
  flex: 1;
}
.showAnimal-search .search-button {
  border: none;
  background-color: #fff;
  margin-top: 0.1em;
  margin-right: auto;
  margin-left: 0px;
}
.search-button {
  width: 1.8em !important;
  padding: 10px !important;
}
.search-input:hover {
  cursor: pointer;
}
.search-icon {
  height: 1.2em;
  width: 1.2em;
  fill: #b4b4b4;
}


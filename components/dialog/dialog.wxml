<view class="dialog" wx:if="{{isShowDialog}}">
  <view>
    <view class="dialog-container" catchtap="stop">
      <view class="dialog-header"> {{title}} </view>
      <view class="dialog-body" wx:if="{{info}}"> {{info}} <slot></slot> </view>
      <view class="dialog-footer">
        <view class="dialog-btn" bindtap="closeDialog"> чбошод </view>
      </view>
    </view>
  </view>
</view>

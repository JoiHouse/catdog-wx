.commentAdd-wrapper {
	height: 100vh;
	width: 100vw;
	position: fixed;
	left: 0;
	top: 0;
	z-index: 999;
	background: rgba(0, 0, 0, 0.3);
}
.commentAdd {
	height: 100%;
	width: 100%;
	position: relative;
}
.commentAdd .commentAdd-content {
	width: 100%;
	position: fixed;
	background: #fff;
	bottom: 0;
	border-radius: 18px 18px 0 0;
}
.commentAdd-content > view {
	padding: 20px;
    display: flex;
	align-items: center;
}

.commentAdd-input {
	margin: auto;
	padding: 10px;
	background: #f3f4f8;
	color: #1d1d1f;
	font-size: 15px;
	width: 88%;
	border-radius: 18px;
	display: flex;
	align-items: center;
}
.commentAdd-input > textarea {
	height: auto;
	padding: 0 15px;
	max-height: 2.6em;
	flex-shrink: 1;
	display: flex;
	width: 100%;
	max-width: 100%;
}

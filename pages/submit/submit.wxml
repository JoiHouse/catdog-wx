<view class="submit">
  <view class="submit-container">
    <view class="submitInfo">
      <view class="submit-form">
        <text>昵称</text>
        <input
          type="text"
          placeholder="猫猫狗狗昵称"
          value="{{formData.name}}"
        />
      </view>

      <view class="submit-form">
        <text>性别</text>
        <view class="submit-btns">
          <view
            class="submit-radio man {{formData.sex===1?'active':''}}"
            bindtap="chooseSex"
            data-sex="1"
          >
            男
          </view>
          <view
            class="submit-radio woman {{formData.sex===2?'active':''}}"
            bindtap="chooseSex"
            data-sex="2"
          >
            女
          </view>
          <view
            class="submit-radio none {{formData.sex===0?'active':''}}"
            bindtap="chooseSex"
            data-sex="0"
          >
            未知
          </view>
        </view>
      </view>

      <view class="submit-form">
        <text>年龄</text>
        <input
          type="text"
          placeholder="修狗狗几岁啦"
          value="{{formData.age}}"
        />
      </view>
      <view class="submit-form">
        <text>种类</text>
        <view class="submit-btns">
          <view
            class="submit-radio man {{formData.type===1?'active':''}}"
            bindtap="chooseType"
            data-type="1"
          >
            猫猫
          </view>
          <view
            class="submit-radio man {{formData.type===2?'active':''}}"
            bindtap="chooseType"
            data-type="2"
          >
            狗狗
          </view>
        </view>
      </view>
      <view class="submit-form">
        <text>标签</text>
        <view class="submit-btns">
          <view
            class="submit-radio man {{formData.type===1?'active':''}}"
            bindtap="chooseType"
            data-type="1"
          >
            疫苗
          </view>
          <view
            class="submit-radio man {{formData.type===2?'active':''}}"
            bindtap="chooseType"
            data-type="2"
          >
            绝育
          </view>
        </view>
        <view class="submit-btns">
          <view
            class="submit-radio man {{formData.type===1?'active':''}}"
            bindtap="chooseType"
            data-type="1"
          >
            驱虫
          </view>
          <view
            class="submit-radio man {{formData.type===2?'active':''}}"
            bindtap="chooseType"
            data-type="2"
          >
            有小宝宝
          </view>
        </view>
        <view class="submit-btns">
          <view
            class="submit-radio man {{formData.type===2?'active':''}}"
            bindtap="chooseType"
            data-type="2"
          >
            添加标签
          </view>
        </view>
  
      </view>
    </view>
  </view>
</view>

.submit {
  height: 100vh;
  width: 100vw;
}
.submit-container {
  height: 100%;
  width: 100%;
  background-color: #fff;
  overflow-x: hidden;
  overflow-y: auto;
}
.submitInfo {
  padding: 20px;
  padding-bottom: 50px;
}
.submit-form {
  padding: 20px;
}
.submit-form > text {
  font-weight: 600;
  font-size: 0.7em;
  display: flex;
  gap: 8px;
  align-items: center;
  padding: 10px 0;
}
.submit-form > text::before {
  content: "";
  display: block;
  border-radius: 50%;
  height: 0.3em;
  width: 0.3em;
  border: 3px solid #4159e7;
}
.submit-form input {
  font-weight: 600;
  padding: 10px;
  border-bottom: 1px solid #d7dee9;
}
.submit-btns {
  display: flex;
  flex-wrap: wrap;
  gap: 20px;
  margin-top: 10px;
}
.submit-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 10px;
  margin-top: 10px;
}
.submit-tags .submit-radio {
  flex: none;
}
.submit-radio {
  flex: 1;
  width: 100%;
  padding: 10px 5px;
  font-size: 0.9em;
  background: #f6faff;
  text-align: center;
  color: #d9dbe9;
  border-radius: 19px;
}

.submit-radio.b.active {
	background-image: linear-gradient(90deg, #5468eb, #8289f9);
  color: #fff;
}
.submit-radio.p.active {
  background-image: linear-gradient(90deg, #ec69c1, #f58ee0e8);
  color: #fff;
}
.submit-radio.g.active {
	background-image: linear-gradient(90deg, #94c0e7, #70b0e9);
  color: #fff;
}
.submit-add {
  background-image: linear-gradient(90deg, #cbe794, #c9eb86);
  color: #fff;
}
.submit-btn {
  background-image: linear-gradient(90deg, #94c0e7, #70b0e9);
  color: #fff;
  padding: 12px 0;
}
.upload-pic-list {
	display: flex;
	flex-wrap: wrap;
	gap: 10px;
	margin-top: 10px;
}

.upload-pic-item image {
	height: 100%;
	width: 100%;
}
.upload-pic-item.upload-pic-btn {
	background-color: #f7f7f7;
	position: relative;
}
.upload-pic-btn::before,
.upload-pic-btn::after {
	position: absolute;
	content: "";
	width: 30%;
	height: 2px;
	border-radius: 2px;
	top: 50%;
	left: 50%;
	background-color: #817f7f;
}
.upload-pic-btn::before {
	transform: translate(-50%, -50%);
}
.upload-pic-btn::after {
	transform: translate(-50%, -50%) rotate(90deg);
}
